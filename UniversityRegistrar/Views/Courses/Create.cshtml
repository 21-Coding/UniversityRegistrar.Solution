@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h4>Please enter the new course information:</h4>
@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)
  <input type="submit" value="Add Course" class="btn btn-default">
}

<p>@Html.ActionLink("Back to Course Listing", "Index")</p>