@{
    Layout = "Layout";
}

@model UniversityRegistrar.Models.Students

<h3>Add a course</h3>

<h4>Add a course for @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)
    @Html.Label("Select a course")
    @Html.DropDownList("CourseId")
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("All Courses", "Index")</p>
