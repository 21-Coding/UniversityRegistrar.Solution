@{
  Layout = "_Layout";
}
@model UniversityRegistrar.Models.Student

<h4>Add New Student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.DateOfEnrollment)
  @Html.TextBoxFor(model => model.DateOfEnrollment)
  <input type="submit" value="Add Student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show All Students", "Index")</p>